{
  "title": "Himno #310 Cristo, centro de mi vida",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Cristo, centro de mi vida,",
        "Salvador en aflicción;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "nadie viene a ti en vano,",
        "tu paciencia es sin fin."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Del abismo líbrame,",
        "a tu lado quiero estar"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "y por la eternidad alabarte sin cesar."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Cristo, Redentor eterno,",
        "limpia nuestro corazón;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "que podamos perdonarnos,",
        "las ofensas olvidar."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Del abismo líbrame,",
        "a tu lado quiero estar"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "y por la eternidad alabarte sin cesar."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Cristo, sobre todo reinas,",
        "eternal es tu poder."
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "Infinita es tu gracia",
        "para todo pecador."
      ]
    },
