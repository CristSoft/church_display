{
  "title": "Cada cosa hermosa",
  "number": "071",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "A cada flor que se abre,",
        "al ave musical."
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "vistió de tonos bellos,",
        "el Padre celestial."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Cada cosa hermosa aquí",
        "y todo su esplendor,"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "es la obra sin igual",
        "del grande Creador."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Montañas majestuosas,",
        "el río al correr,"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "la paz del sol poniente,",
        "el bello amanecer."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Cada cosa hermosa aquí",
        "y todo su esplendor,"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "es la obra sin igual",
        "del grande Creador."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "El viento del invierno,",
        "la brisa estival,"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "los frutos en el huerto,",
        "el fresco manantial."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Cada cosa hermosa aquí",
        "y todo su esplendor,"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "es la obra sin igual",
        "del grande Creador."
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "Nos concedió la vista",
        "y labios para hablar",
        "del Creador eterno"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "que tanto pudo amar."
      ]
    },
