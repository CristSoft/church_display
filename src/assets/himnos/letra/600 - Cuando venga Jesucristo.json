{
  "title": "Cuando venga Jesucristo",
  "number": "600",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Cuando venga Jesucristo",
        "en busca de joyas,",
        "todo niño redimido"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "su gema será."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Como estrellas que brillan",
        "son los niños que le aman;"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "son tesoros que adornan",
        "al Rey y Señor."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Quiere Cristo en su corona",
        "brillantes estrellas;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "cada gema que le adorna",
        "con sangre compró."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Como estrellas que brillan",
        "son los niños que le aman;"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "son tesoros que adornan",
        "al Rey y Señor."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Él escoge por tesoros",
        "los niños amados,"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "y en su seno a los corderos",
        "recibe Jesús."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Como estrellas que brillan",
        "son los niños que le aman;"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "son tesoros que adornan",
        "al Rey y Señor."
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "Si los niños y las niñas",
        "acuden a Cristo,"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "bellas joyas, escogidas,",
        "serán para él."
      ]
    },
    "15": {
