{
  "title": "Promesa dulce",
  "number": "172",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Promesa dulce: \"Yo vendré,",
        "y a los que sufren salvaré\"."
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "Responde mi alma: \"Presto ven;",
        "ansioso esperaré\"."
      ]
    },
    "3": {
      "verse": "coro 1",
      "text": [
        "¡Ven, Señor, mi Redentor!",
        "¡Ven, Señor, mi Redentor!"
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "Responde mi alma: \"¡Presto ven,",
        "Señor, mi Redentor!\""
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Los santos vuelven a vivir,",
        "al cielo todos subirán;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "y en tierra atado años mil",
        "ha de quedar Satán."
      ]
    },
    "7": {
      "verse": "coro 2",
      "text": [
        "¡Ven, Señor, mi Redentor!",
        "¡Ven, Señor, mi Redentor!"
      ]
    },
    "8": {
      "verse": "coro 2",
      "text": [
        "Responde mi alma: \"¡Presto ven,",
        "Señor, mi Redentor!\""
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Desciende entonces la ciudad,",
        "los malos levantados son"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "a oír el fallo de su Juez:",
        "\"Eterna perdición\"."
      ]
    },
    "11": {
      "verse": "coro 3",
      "text": [
        "¡Ven, Señor, mi Redentor!",
        "¡Ven, Señor, mi Redentor!"
      ]
    },
    "12": {
      "verse": "coro 3",
      "text": [
        "Responde mi alma: \"¡Presto ven,",
        "Señor, mi Redentor!\""
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "El nuevo Edén florecerá",
        "en hermosura celestial;"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "jamás la muerte turbará",
        "la playa inmortal."
      ]
    },
    "15": {
      "verse": "coro 4",
      "text": [
        "¡Ven, Señor, mi Redentor!",
        "¡Ven, Señor, mi Redentor!"
      ]
    },
