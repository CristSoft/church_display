{
  "title": "Cristo es el mejor amigo",
  "number": "110",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Cristo es el mejor amigo",
        "cuando triste o tentado estés;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "colmará de bendición",
        "tu afligido corazón."
      ]
    },
    "3": {
      "verse": "coro 1",
      "text": [
        "Cristo es el mejor amigo.",
        "Cristo es el mejor amigo,"
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "Cristo es el mejor amigo.",
        "Él tus súplicas oirá"
      ]
    },
    "5": {
      "verse": "coro 1",
      "text": [
        "y tu carga llevará.",
        "¡Oh, es Cristo el mejor amigo!"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "En Jesús fiel amigo encuentro;"
      ]
    },
    "7": {
      "verse": "2",
      "text": [
        "paz perfecta y plena a mi alma da.",
        "Apoyado en él estoy,"
      ]
    },
    "8": {
      "verse": "2",
      "text": [
        "mi confianza a él le doy."
      ]
    },
    "9": {
