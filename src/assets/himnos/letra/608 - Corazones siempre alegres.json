{
  "title": "Corazones siempre alegres",
  "number": "608",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Corazones siempre alegres,",
        "rebosando gratitud,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "somos los que a Dios amamos,",
        "redimida juventud."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Siempre alegres vamos todos,",
        "llenos de felicidad;"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "hermosísimo es el camino,",
        "hacia la eternidad."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Dios nos guía de la mano;",
        "nos ampara su poder;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "es su brazo poderoso",
        "y nos quiere defender."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Siempre alegres vamos todos,",
        "llenos de felicidad;"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "hermosísimo es el camino,",
        "hacia la eternidad."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Si en la lucha desmayamos",
        "o nos sitia la maldad,"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "con su gracia nos anima,",
        "nos levanta su bondad."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Siempre alegres vamos todos,",
        "llenos de felicidad;"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "hermosísimo es el camino,",
        "hacia la eternidad."
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "Con sus fuerzas llevaremos",
        "muy gozosos nuestra cruz;"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "victoriosos cantaremos",
        "en la gloria de su luz."
      ]
    },
    "15": {
      "verse": "coro",
      "text": [
        "Siempre alegres vamos todos,",
        "llenos de felicidad;"
      ]
    },
    "16": {
