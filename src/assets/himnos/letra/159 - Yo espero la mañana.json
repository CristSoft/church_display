{
  "title": "Yo espero la mañana",
  "number": "159",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Yo espero la mañana",
        "del gran día sin igual,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "del cual dicha eterna emana",
        "y deleite perennal."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Esperando, esperando",
        "otra vida sin dolor",
        "y la grata bienvenida"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "de Jesús, mi amante Salvador."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Yo espero la victoria,",
        "de la muerte al fin triunfar,"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "recibir la eterna gloria",
        "y mis sienes coronar."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Esperando, esperando",
        "otra vida sin dolor",
        "y la grata bienvenida"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "de Jesús, mi amante Salvador."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Yo espero ir al cielo,",
        "donde reina eterno amor;"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "peregrino soy y anhelo",
        "las moradas del Señor."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Esperando, esperando",
        "otra vida sin dolor",
        "y la grata bienvenida"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "de Jesús, mi amante Salvador."
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "Pronto espero unir mi canto",
        "al triunfante y celestial,"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "y cambiar mi amargo llanto",
        "por el himno angelical."
      ]
    },
    "15": {
      "verse": "coro",
      "text": [
        "Esperando, esperando",
        "otra vida sin dolor",
        "y la grata bienvenida"
      ]
    },
    "16": {
      "verse": "coro",
      "text": [
        "de Jesús, mi amante Salvador."
      ]
    }
  }
