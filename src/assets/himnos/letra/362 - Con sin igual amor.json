{
  "title": "Con sin igual amor",
  "number": "362",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Con sin igual amor Cristo me ama,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "su dulce paz en mi alma derrama,",
        "y por salvarme su vida dio:"
      ]
    },
    "3": {
      "verse": "1",
      "text": [
        "ya pertenezco a él."
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "Ya pertenezco a Cristo,",
        "¡cuán pura es su amistad!"
      ]
    },
    "5": {
      "verse": "coro",
      "text": [
        "Por las edades durará,",
        "y por la eternidad."
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "Por mis pecados fui condenado,"
      ]
    },
    "7": {
      "verse": "2",
      "text": [
        "mas hoy por Cristo soy perdonado;"
      ]
    },
    "8": {
      "verse": "2",
      "text": [
        "del hondo abismo me levantó:",
        "ya pertenezco a él."
      ]
    },
    "9": {
      "verse": "coro",
      "text": [
        "Ya pertenezco a Cristo,",
        "¡cuán pura es su amistad!"
      ]
    },
    "10": {
      "verse": "coro",
      "text": [
        "Por las edades durará,",
        "y por la eternidad."
      ]
    },
    "11": {
      "verse": "3",
      "text": [
        "Mi corazón palpita de gozo,"
      ]
    },
    "12": {
      "verse": "3",
      "text": [
        "Cristo es de Dios el don más precioso;"
      ]
    },
    "13": {
      "verse": "3",
      "text": [
        "por redimirme su sangre dio,",
        "ya pertenezco a él."
      ]
    },
    "14": {
      "verse": "coro",
      "text": [
        "Ya pertenezco a Cristo,",
        "¡cuán pura es su amistad!"
      ]
    },
    "15": {
      "verse": "coro",
      "text": [
        "Por las edades durará,",
        "y por la eternidad."
      ]
    }
  }
