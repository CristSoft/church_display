{
  "title": "Junto a la cruz do Jesús murió",
  "number": "149",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Junto a la cruz do Jesús murió,",
        "do por su gracia clamaba yo,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "mis manchas su sangre allí quitó:",
        "¡a su nombre gloria!"
      ]
    },
    "3": {
      "verse": "coro 1",
      "text": [
        "¡A su nombre gloria!",
        "¡A su nombre gloria!"
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "Cristo Jesús es mi Salvador:",
        "¡a su nombre gloria!"
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Cuando por fe en la cruz lo vi,",
        "de mis pecados salvado fui,"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "hoy él me guarda y mora en mí;",
        "¡a su nombre gloria!"
      ]
    },
    "7": {
      "verse": "coro 2",
      "text": [
        "¡A su nombre gloria!",
        "¡A su nombre gloria!"
      ]
    },
    "8": {
      "verse": "coro 2",
      "text": [
        "Cristo Jesús es mi Salvador:",
        "¡a su nombre gloria!"
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "¡Fuente preciosa de salvación!",
        "Gozo en ti halla mi corazón;"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "en ti, Jesús salva y da perdón:",
        "¡a su nombre gloria!"
      ]
    },
    "11": {
      "verse": "coro 3",
      "text": [
        "¡A su nombre gloria!",
        "¡A su nombre gloria!"
      ]
    },
    "12": {
      "verse": "coro 3",
      "text": [
        "Cristo Jesús es mi Salvador:",
        "¡a su nombre gloria!"
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "¡Ven a esta fuente, oh pecador!"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "Ponte a los pies de tu Salvador;",
        "te colmará de su santo amor:"
      ]
    },
    "15": {
      "verse": "4",
      "text": [
        "¡a su nombre gloria!"
      ]
    },
    "16": {
      "verse": "coro 4",
      "text": [
        "¡A su nombre gloria!",
        "¡A su nombre gloria!"
      ]
    },
