{
  "title": "Si Dios está, ¡feliz hogar!",
  "number": "592",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Si Dios está, ¡feliz hogar!",
        "Su gran amor nos da."
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "Un solo anhelo allí habrá:",
        "la dicha celestial."
      ]
    },
    "3": {
      "verse": "2",
      "text": [
        "Si Cristo está, ¡feliz hogar!",
        "Los niños cantarán"
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "y los adultos hablarán",
        "del Nombre sin igual."
      ]
    },
    "5": {
      "verse": "3",
      "text": [
        "Pido, Señor, tu bendición",
        "sobre mi humilde hogar,"
      ]
    },
    "6": {
      "verse": "3",
      "text": [
        "para que reine tu amor",
        "hasta la eternidad."
      ]
    }
  }
}