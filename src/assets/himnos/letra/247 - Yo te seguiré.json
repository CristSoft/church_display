{
  "title": "Yo te seguiré",
  "number": "247",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Yo te seguiré, ¡Oh Cristo!,",
        "dondequiera que estés;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "donde tú me guíes, sigo;",
        "sí, Señor, te seguiré."
      ]
    },
    "3": {
      "verse": "coro 1",
      "text": [
        "Yo te seguiré, ¡oh Cristo!",
        "Tú moriste para mí."
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "Aunque todos te negaren,",
        "yo, Señor, te seguiré."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Aunque duro el camino,",
        "sin señales y sin luz,"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "seguiré siempre confiado",
        "en las huellas de Jesús."
      ]
    },
    "7": {
      "verse": "coro 2",
      "text": [
        "Yo te seguiré, ¡oh Cristo!",
        "Tú moriste para mí."
      ]
    },
    "8": {
      "verse": "coro 2",
      "text": [
        "Aunque todos te negaren,",
        "yo, Señor, te seguiré."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Afligido, agotado,",
        "débil, lleno de dolor,"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "regocíjome, pues ando",
        "en las huellas del Señor."
      ]
    },
    "11": {
      "verse": "coro 3",
      "text": [
        "Yo te seguiré, ¡oh Cristo!",
        "Tú moriste para mí."
      ]
    },
    "12": {
      "verse": "coro 3",
      "text": [
        "Aunque todos te negaren,",
        "yo, Señor, te seguiré."
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "Si me guías al gran río",
        "del Jordán, no temeré;"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "has pasado tú su frío,",
        "y gozoso seguiré."
      ]
    },
    "15": {
      "verse": "coro 4",
      "text": [
        "Yo te seguiré, ¡oh Cristo!",
        "Tú moriste para mí."
      ]
    },
    "16": {
      "verse": "coro 4",
      "text": [
        "Aunque todos te negaren,",
        "yo, Señor, te seguiré."
      ]
    }
  }
}