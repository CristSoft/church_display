{
  "title": "En la tierra adonde iré",
  "number": "332",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "En la tierra adonde iré",
        "muerte y llanto no habrá;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "gozo eterno allí tendré,",
        "y no hay noche allá."
      ]
    },
    "3": {
      "verse": "coro 1",
      "text": [
        "Dios las penas quitará,",
        "no habrá muerte ni dolor;"
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "tiempo no se contará,",
        "y no hay noche allá."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Puertas bellas se abrirán",
        "en la Santa Ciudad;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "calles áureas se verán,",
        "y no hay noche allá."
      ]
    },
    "7": {
      "verse": "coro 2",
      "text": [
        "Dios las penas quitará,",
        "no habrá muerte ni dolor;"
      ]
    },
    "8": {
      "verse": "coro 2",
      "text": [
        "tiempo no se contará,",
        "y no hay noche allá."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Para siempre viviré",
        "en mi amado hogar;",
        "agua viva beberé,"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "y no hay noche allá."
      ]
    },
    "11": {
