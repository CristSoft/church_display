{
  "title": "Amanece ya la mañana de oro",
  "number": "158",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Amanece ya la mañana de oro,",
        "pronto el Rey vendrá;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "y su pueblo a la mansión del cielo",
        "Cristo llevará."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Amanece ya la mañana de oro",
        "tras la noche terrenal,"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "cuando surgirá del sepulcro abierto",
        "vida inmortal."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "En aquel gran día los separados",
        "se encontrarán,"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "y las lágrimas de los afligidos",
        "se enjugarán."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Amanece ya la mañana de oro",
        "tras la noche terrenal,"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "cuando surgirá del sepulcro abierto",
        "vida inmortal."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Con sus ángeles de esplendente aspecto"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "Cristo, el Juez, vendrá,"
      ]
    },
    "11": {
      "verse": "3",
      "text": [
        "a llevar su iglesia a donde en gloria",
        "siempre morará."
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "Amanece ya la mañana de oro",
        "tras la noche terrenal,"
      ]
    },
    "13": {
      "verse": "coro",
      "text": [
        "cuando surgirá del sepulcro abierto",
        "vida inmortal."
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "Cuando llegue a todos el evangelio",
        "anunciando el fin,"
      ]
    },
    "15": {
      "verse": "4",
      "text": [
        "cesará el tardar del Esposo entonces,",
        "sonará el clarín."
      ]
    },
