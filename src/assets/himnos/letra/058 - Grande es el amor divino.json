{
  "title": "Grande es el amor divino",
  "number": "058",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Grande es el amor divino,",
        "es más amplio que el mar."
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "¡Qué bondad en su justicia!",
        "Vino el mundo a libertar."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Él nos llama con amor;",
        "¡oh, sigamos al Señor!"
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "En la sangre del Maestro",
        "hay poder de salvación,"
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "sanidad hay para el alma,",
        "y del mal hay protección."
      ]
    },
    "6": {
      "verse": "coro",
      "text": [
        "Él nos llama con amor;",
        "¡oh, sigamos al Señor!"
      ]
    },
    "7": {
      "verse": "3",
      "text": [
        "Mas, oh cuánto limitamos",
        "por la débil comprensión"
      ]
    },
    "8": {
      "verse": "3",
      "text": [
        "su poder, su magna gracia,",
        "despreciando su gran don."
      ]
    },
    "9": {
      "verse": "coro",
      "text": [
        "Él nos llama con amor;",
        "¡oh, sigamos al Señor!"
      ]
    },
    "10": {
      "verse": "4",
      "text": [
        "Respondamos prestamente",
        "al llamado de Jesús;"
      ]
    },
    "11": {
      "verse": "4",
      "text": [
        "redimionos ampliamente",
        "por su muerte en la cruz."
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "Él nos llama con amor;",
        "¡oh, sigamos al Señor!"
      ]
    }
  }
}