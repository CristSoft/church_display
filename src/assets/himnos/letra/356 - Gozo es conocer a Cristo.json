{
  "title": "Gozo es conocer a Cristo",
  "number": "356",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Gozo es conocer a Cristo,",
        "permaneciendo fiel y listo,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "siempre andando en sus sendas.",
        "Gozo es el Señor."
      ]
    },
    "3": {
      "verse": "2",
      "text": [
        "Gozo es ser de él testigo,",
        "gozo es Cristo por amigo;"
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "y disfrutar de su presencia;",
        "gozo es el Señor."
      ]
    },
    "5": {
      "verse": "3",
      "text": [
        "Alegre estoy,",
        "no importa si hay aflicción;",
        "ya sé el secreto:"
      ]
    },
    "6": {
      "verse": "3",
      "text": [
        "Es Cristo en mi ser."
      ]
    },
    "7": {
      "verse": "4",
      "text": [
        "Gozo es Cristo a mi lado;",
        "tengo alivio del pecado,"
      ]
    },
    "8": {
      "verse": "4",
      "text": [
        "pronto iré al santo cielo.",
        "Gozo es el Señor."
      ]
    }
  }
}