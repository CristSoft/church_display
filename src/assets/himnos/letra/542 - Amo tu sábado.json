{
  "title": "Amo tu sábado",
  "number": "542",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Amo tu sábado;",
        "te adoraré, Señor;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "pues dulce paz encuentro en él,",
        "profunda y serena fe."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "tu creación cantó;",
        "elevaré, también, mi voz"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "en gratitud y amor."
      ]
    },
    "5": {
      "verse": "coro",
      "text": [
        "tu creación cantó;",
        "elevaré, también, mi voz"
      ]
    },
    "6": {
      "verse": "coro",
      "text": [
        "en gratitud y amor."
      ]
    },
    "7": {
      "verse": "3",
      "text": [
        "Oh, nuestro Creador,",
        "tu generoso don",
        "me santifique en tu amor,"
      ]
    },
    "8": {
      "verse": "3",
      "text": [
        "y así veré tu faz."
      ]
    },
    "9": {
      "verse": "coro",
      "text": [
        "tu creación cantó;",
        "elevaré, también, mi voz"
      ]
    },
    "10": {
      "verse": "coro",
      "text": [
        "en gratitud y amor."
      ]
    },
    "11": {
      "verse": "4",
      "text": [
        "Y en la Santa Sion",
        "siempre entonaré",
        "himnos de eterna gratitud"
      ]
    },
    "12": {
      "verse": "4",
      "text": [
        "por tu inefable amor."
      ]
    },
    "13": {
      "verse": "coro",
      "text": [
        "tu creación cantó;",
        "elevaré, también, mi voz"
      ]
    },
    "14": {
