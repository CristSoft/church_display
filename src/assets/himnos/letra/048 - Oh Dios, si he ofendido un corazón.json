{
  "title": "Oh Dios, si he ofendido un corazón",
  "number": "048",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Oh Dios, si he ofendido un corazón,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "si he sido causa de su perdición,"
      ]
    },
    "3": {
      "verse": "1",
      "text": [
        "si he andado hoy sin discreción",
        "te imploro perdón."
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "Si he proferido voces de maldad,"
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "faltando en demostrar la caridad,"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "oh santo Dios, buscándote en verdad",
        "te imploro perdón."
      ]
    },
    "7": {
      "verse": "3",
      "text": [
        "Si he sido perezoso en trabajar,"
      ]
    },
    "8": {
      "verse": "3",
      "text": [
        "dejando mi deber sin realizar"
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "en vez de hacer tu celestial mandar,",
        "te imploro perdón."
      ]
    },
    "10": {
      "verse": "4",
      "text": [
        "Tú, del contrito, fiel perdonador,"
      ]
    },
    "11": {
      "verse": "4",
      "text": [
        "que atiendes al clamor del pecador,"
      ]
    },
    "12": {
      "verse": "4",
      "text": [
        "perdóname y guárdame en tu amor,",
        "por Cristo. Amén."
      ]
    }
  }
}