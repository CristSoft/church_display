{
  "title": "Cristo está a mi lado",
  "number": "116",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Muchas veces me pregunto:",
        "¿Por qué él me ama a mí?"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "Tantas veces yo fallé,",
        "sin embargo me ama."
      ]
    },
    "3": {
      "verse": "1",
      "text": [
        "Cuando estoy desanimado",
        "y cuando todo va mal,"
      ]
    },
    "4": {
      "verse": "1",
      "text": [
        "Cristo viene a mi lado",
        "y me da su paz."
      ]
    },
    "5": {
      "verse": "coro",
      "text": [
        "Cristo está a mi lado;",
        "nunca me dejará.",
        "Nadie puede amarme"
      ]
    },
    "6": {
      "verse": "coro",
      "text": [
        "como mi Jesús."
      ]
    },
    "7": {
      "verse": "2",
      "text": [
        "Cada día miro alrededor",
        "y puedo contemplar"
      ]
    },
    "8": {
      "verse": "2",
      "text": [
        "pruebas de un amor sin par",
        "que nunca fallará."
      ]
    },
    "9": {
      "verse": "2",
      "text": [
        "Su palabra me revela",
        "milagros de gran poder;"
      ]
    },
    "10": {
      "verse": "2",
      "text": [
        "y de todos el más grande",
        "es su amor por mí."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Cristo está a mi lado;",
        "nunca me dejará.",
        "Nadie puede amarme"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "como mi Jesús."
      ]
    }
  }
}