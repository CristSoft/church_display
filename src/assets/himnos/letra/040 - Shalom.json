{
  "title": "Shalom",
  "number": "40",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Que Dios te dé su bendición,",
        "shalom, shalom."
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "Te guarde Dios de todo mal,",
        "shalom, shalom."
      ]
    },
    "3": {
      "verse": "2",
      "text": [
        "Misericordia tenga de ti,",
        "shalom, shalom."
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "y resplandezca su bondad,",
        "shalom, shalom."
      ]
    },
    "5": {
      "verse": "3",
      "text": [
        "Él alce su rostro sobre ti,",
        "shalom, shalom."
      ]
    },
    "6": {
      "verse": "3",
      "text": [
        "Que ponga en ti su paz y amor,",
        "shalom, shalom."
      ]
    }
  }
}