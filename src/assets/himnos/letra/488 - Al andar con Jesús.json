{
  "title": "Al andar con Jesús",
  "number": "488",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Al andar con Jesús en su fúlgida luz,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "en mi senda su gloria veré;"
      ]
    },
    "3": {
      "verse": "1",
      "text": [
        "y su voz he de oír, pues promete vivir"
      ]
    },
    "4": {
      "verse": "1",
      "text": [
        "con aquel que obedece por fe."
      ]
    },
    "5": {
      "verse": "coro",
      "text": [
        "Su santa Ley",
        "obedezco por fe,",
        "y feliz para siempre"
      ]
    },
    "6": {
      "verse": "coro",
      "text": [
        "con Jesús estaré."
      ]
    },
    "7": {
      "verse": "2",
      "text": [
        "Si trabajo y penar tengo aquí que cargar,"
      ]
    },
    "8": {
      "verse": "2",
      "text": [
        "fortaleza en Jesús obtendré;"
      ]
    },
    "9": {
      "verse": "2",
      "text": [
        "pues alivia su amor mi afán, mi dolor,"
      ]
    },
    "10": {
      "verse": "2",
      "text": [
        "cuando ve que obedezco por fe."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Su santa Ley",
        "obedezco por fe,",
        "y feliz para siempre"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "con Jesús estaré."
      ]
    },
    "13": {
      "verse": "3",
      "text": [
        "Nunca pude saber de su amor el placer"
      ]
    },
    "14": {
      "verse": "3",
      "text": [
        "hasta que todo a Cristo entregué."
      ]
    },
    "15": {
      "verse": "3",
      "text": [
        "Su bondad, su favor, su poder redentor"
      ]
    },
    "16": {
      "verse": "3",
      "text": [
        "goza aquel que obedece por fe."
      ]
    },
    "17": {
      "verse": "coro",
      "text": [
        "Su santa Ley",
        "obedezco por fe,",
        "y feliz para siempre"
      ]
    },
    "18": {
      "verse": "coro",
      "text": [
        "con Jesús estaré."
      ]
    },
    "19": {
      "verse": "4",
      "text": [
        "Fiel amigo él es; sentareme a sus pies,"
      ]
    },
    "20": {
      "verse": "4",
      "text": [
        "y a su lado el camino andaré."
      ]
    },
    "21": {
      "verse": "4",
      "text": [
        "Lo que él diga, haré, donde él quiera, iré,"
      ]
    },
    "22": {
      "verse": "4",
      "text": [
        "sin temor obedezco por fe."
      ]
    },
    "23": {
      "verse": "coro",
      "text": [
        "Su santa Ley",
        "obedezco por fe,",
        "y feliz para siempre"
      ]
    },
    "24": {
      "verse": "coro",
      "text": [
        "con Jesús estaré."
      ]
    }
  }
}