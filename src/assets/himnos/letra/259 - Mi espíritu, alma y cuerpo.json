{
  "title": "Mi espíritu, alma y cuerpo",
  "number": "259",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Mi espíritu, alma y cuerpo,",
        "mi ser, mi vida entera,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "cual viva, santa ofrenda",
        "te entrego a ti, mi Dios."
      ]
    },
    "3": {
      "verse": "coro 1",
      "text": [
        "Mi todo a Dios consagro",
        "en Cristo, el vivo altar."
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "¡Descienda el fuego santo,",
        "su sello celestial!"
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Soy tuyo, Jesucristo,",
        "comprado con tu sangre;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "haz que contigo ande",
        "en plena comunión."
      ]
    },
    "7": {
      "verse": "coro 2",
      "text": [
        "Mi todo a Dios consagro",
        "en Cristo, el vivo altar."
      ]
    },
    "8": {
      "verse": "coro 2",
      "text": [
        "¡Descienda el fuego santo,",
        "su sello celestial!"
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Espíritu divino,",
        "del Padre la promesa,"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "sedienta, mi alma anhela",
        "de ti la santa unción."
      ]
    },
    "11": {
      "verse": "coro 3",
      "text": [
        "Mi todo a Dios consagro",
        "en Cristo, el vivo altar."
      ]
    },
    "12": {
      "verse": "coro 3",
      "text": [
        "¡Descienda el fuego santo,",
        "su sello celestial!"
      ]
    }
  }
}