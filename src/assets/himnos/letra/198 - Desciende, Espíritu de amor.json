{
  "title": "Desciende, Espíritu de amor",
  "number": "198",
  "verses": "4",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Desciende, Espíritu de amor,",
        "Paloma celestial,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "promesa fiel del Salvador,",
        "de gracia manantial."
      ]
    },
    "3": {
      "verse": "2",
      "text": [
        "Aviva nuestra escasa fe,",
        "concédenos salud;"
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "benigno, guía nuestro pie",
        "por sendas de virtud."
      ]
    },
    "5": {
      "verse": "3",
      "text": [
        "Consuela nuestro corazón",
        "y habita siempre en él;"
      ]
    },
    "6": {
      "verse": "3",
      "text": [
        "concédele el precioso don",
        "de serte siempre fiel."
      ]
    },
    "7": {
      "verse": "4",
      "text": [
        "A nuestro Padre, celestial;",
        "al Hijo, autor del bien,"
      ]
    },
    "8": {
      "verse": "4",
      "text": [
        "y al Santo Espíritu eternal,",
        "sea la gloria. Amén."
      ]
    }
  }
}