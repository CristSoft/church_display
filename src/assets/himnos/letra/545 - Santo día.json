{
  "title": "Santo día",
  "number": "545",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Santo día que el Señor",
        "en Edén santificó",
        "y lo dio como señal"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "del poder que nos creó."
      ]
    },
    "3": {
      "verse": "coro 1",
      "text": [
        "¡Santo sábado de paz,",
        "bendecido del Señor!"
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "Siempre el sábado será",
        "monumento de su amor."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Gran congoja hallará",
        "quien del mundo siga en pos."
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "El perfecto gozo está",
        "en la paz que ofrece Dios."
      ]
    },
    "7": {
      "verse": "coro 2",
      "text": [
        "¡Santo sábado de paz,",
        "bendecido del Señor!"
      ]
    },
    "8": {
      "verse": "coro 2",
      "text": [
        "Siempre el sábado será",
        "monumento de su amor."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "En el día del Señor,",
        "santa paz podrá gozar"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "quien acuda, en la quietud,",
        "sus palabras a escuchar."
      ]
    },
    "11": {
      "verse": "coro 3",
      "text": [
        "¡Santo sábado de paz,",
        "bendecido del Señor!"
      ]
    },
    "12": {
