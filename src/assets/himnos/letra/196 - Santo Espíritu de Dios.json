{
  "title": "Santo Espíritu de Dios",
  "number": "196",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Santo Espíritu de Dios",
        "brilla en mi corazón;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "vuelve en día la oscuridad",
        "de mi noche de aflicción."
      ]
    },
    "3": {
      "verse": "2",
      "text": [
        "Poderoso Espíritu,",
        "limpia este corazón,"
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "porque sobre mi alma el mal",
        "ejerció cruel opresión."
      ]
    },
    "5": {
      "verse": "3",
      "text": [
        "Oh, divino Espíritu,",
        "mora en mi corazón.",
        "Quita todo ídolo,"
      ]
    },
    "6": {
      "verse": "3",
      "text": [
        "reina en plena posesión."
      ]
    }
  }
}