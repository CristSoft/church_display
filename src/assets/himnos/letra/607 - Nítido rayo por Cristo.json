{
  "title": "Nítido rayo por Cristo",
  "number": "607",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Nítido rayo por Cristo,",
        "yo quiero siempre ser;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "en todo quiero agradarle,",
        "y hacerlo con placer."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Un nítido rayo,",
        "nítido rayo por Cristo.",
        "Un nítido rayo,"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "nítido rayo seré."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "A Cristo quiero acercarme",
        "en mi temprana edad;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "por siempre quiero amarlo",
        "y hacer su voluntad."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Un nítido rayo,",
        "nítido rayo por Cristo.",
        "Un nítido rayo,"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "nítido rayo seré."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "Nítido rayo en tinieblas",
        "deseo siempre ser."
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "Almas perdidas a Cristo",
        "anhelo conducir."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Un nítido rayo,",
        "nítido rayo por Cristo.",
        "Un nítido rayo,"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "nítido rayo seré."
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "Una mansión en el cielo",
        "fue Cristo a preparar;"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "y cuando venga a buscarme",
        "con él iré a morar."
      ]
    },
    "15": {
      "verse": "coro",
      "text": [
        "Un nítido rayo,",
        "nítido rayo por Cristo.",
        "Un nítido rayo,"
      ]
    },
    "16": {
      "verse": "coro",
      "text": [
        "nítido rayo seré."
      ]
    }
  }
}