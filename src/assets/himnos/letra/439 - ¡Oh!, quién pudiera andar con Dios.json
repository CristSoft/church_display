{
  "title": "¡Oh!, quién pudiera andar con Dios",
  "number": "439",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "¡Oh!, quién pudiera andar con Dios,",
        "su dulce paz gozar,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "volviendo a ver de nuevo el sol",
        "de santidad y amor."
      ]
    },
    "3": {
      "verse": "2",
      "text": [
        "¡Oh!, tiempo aquel en que oí",
        "la dulce voz de Dios;"
      ]
    },
    "4": {
      "verse": "2",
      "text": [
        "su fiel acento de amor",
        "oyó mi corazón."
      ]
    },
    "5": {
      "verse": "3",
      "text": [
        "Contrito hoy me acerco a ti,",
        "pidiendo tu merced."
      ]
    },
    "6": {
      "verse": "3",
      "text": [
        "Perdona el pecado vil",
        "con que te contristé."
      ]
    }
  }
}