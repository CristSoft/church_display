{
  "title": "Al Cristo ved",
  "number": "521",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Al Cristo ved, de Dios el Hijo eterno;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "ved al Señor, el grande Creador;"
      ]
    },
    "3": {
      "verse": "1",
      "text": [
        "todo abandona por vivir cual siervo,"
      ]
    },
    "4": {
      "verse": "1",
      "text": [
        "del mal rodeado y presa del dolor."
      ]
    },
    "5": {
      "verse": "coro 1",
      "text": [
        "Por ti todo esto",
        "hizo Jesús;",
        "¿cómo respondes",
        "a su divino amor?"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "En oración tu alma hoy derrama",
        "ante su trono por el pecador;"
      ]
    },
    "7": {
      "verse": "2",
      "text": [
        "lleva la luz de su Palabra santa"
      ]
    },
    "8": {
      "verse": "2",
      "text": [
        "a los que ignoran el divino amor."
      ]
    },
    "9": {
      "verse": "coro 2",
      "text": [
        "Por ti todo esto",
        "hizo Jesús;",
        "¿cómo respondes",
        "a su divino amor?"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "Consagra fiel tus bienes, mayordomo,"
      ]
    },
    "11": {
      "verse": "3",
      "text": [
        "que del Señor manejas el caudal,"
      ]
    },
    "12": {
      "verse": "3",
      "text": [
        "para que puedan por el mundo todo"
      ]
    },
    "13": {
      "verse": "3",
      "text": [
        "salvarse almas del poder del mal."
      ]
    },
    "14": {
      "verse": "coro 3",
      "text": [
        "Por ti todo esto",
        "hizo Jesús;",
        "¿cómo respondes",
        "a su divino amor?"
      ]
    }
  }
}