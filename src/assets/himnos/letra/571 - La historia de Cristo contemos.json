{
  "title": "La historia de Cristo contemos",
  "number": "571",
  "verses": "3",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "La historia de Cristo contemos,",
        "que dará al mundo la luz;"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "la paz y el perdón anunciemos,",
        "comprados en cruenta cruz,"
      ]
    },
    "3": {
      "verse": "1",
      "text": [
        "comprados en cruenta cruz."
      ]
    },
    "4": {
      "verse": "coro 1",
      "text": [
        "Rescatonos de las tinieblas,",
        "disipó nuestra oscuridad;"
      ]
    },
    "5": {
      "verse": "coro 1",
      "text": [
        "él nos salvó, nuestra paz compró,",
        "nos dio luz y libertad."
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "La historia de Cristo daremos",
        "al mortal que ignora su amor;"
      ]
    },
    "7": {
      "verse": "2",
      "text": [
        "nos dio Dios al Hijo, diremos,",
        "hallamos en él favor,"
      ]
    },
    "8": {
      "verse": "2",
      "text": [
        "hallamos en él favor."
      ]
    },
    "9": {
      "verse": "coro 2",
      "text": [
        "Rescatonos de las tinieblas,",
        "disipó nuestra oscuridad;"
      ]
    },
    "10": {
      "verse": "coro 2",
      "text": [
        "él nos salvó, nuestra paz compró,",
        "nos dio luz y libertad."
      ]
    },
    "11": {
      "verse": "3",
      "text": [
        "A Jesús todos confesaremos,",
        "con sincero y fiel corazón;"
      ]
    },
    "12": {
      "verse": "3",
      "text": [
        "sus méritos invocaremos,",
        "y Dios nos dará el perdón,"
      ]
    },
    "13": {
      "verse": "3",
      "text": [
        "y Dios nos dará el perdón."
      ]
    },
    "14": {
      "verse": "coro 3",
