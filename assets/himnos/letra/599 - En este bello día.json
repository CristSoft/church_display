{
  "title": "Himno #599 En este bello día",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "En este bello día",
        "de gozo, amor y luz,",
        "cantamos alabanzas"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "a nuestro Rey, Jesús."
      ]
    },
    "3": {
      "verse": "coro",
      "text": [
        "Cantad, cantad,",
        "a Cristo dad loor;",
        "cantad, cantad"
      ]
    },
    "4": {
      "verse": "coro",
      "text": [
        "la gloria del Señor."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Jesús amó a los niños",
        "estando aún aquí,",
        "y ahora en los cielos"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "los ama siempre así."
      ]
    },
    "7": {
      "verse": "coro",
      "text": [
        "Cantad, cantad,",
        "a Cristo dad loor;",
        "cantad, cantad"
      ]
    },
    "8": {
      "verse": "coro",
      "text": [
        "la gloria del Señor."
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "La historia de su vida",
        "nos gusta escuchar;"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "su amor y mansedumbre",
        "queremos imitar."
      ]
    },
    "11": {
      "verse": "coro",
      "text": [
        "Cantad, cantad,",
        "a Cristo dad loor;",
        "cantad, cantad"
      ]
    },
    "12": {
      "verse": "coro",
      "text": [
        "la gloria del Señor."
      ]
    },
    "13": {
      "verse": "4",
      "text": [
        "¡Oh! Salvador bendito,",
        "rogamos hoy a ti"
      ]
    },
    "14": {
      "verse": "4",
      "text": [
        "nos guardes del maligno",
        "en nuestra senda aquí."
      ]
    },
    "15": {
      "verse": "coro",
      "text": [
        "Cantad, cantad,",
        "a Cristo dad loor;",
        "cantad, cantad"
      ]
    },
    "16": {
