{
  "title": "Himno #495 Mi deber",
  "sections": {
    "1": {
      "verse": "1",
      "text": [
        "Amar a alguien con más intenso amor,"
      ]
    },
    "2": {
      "verse": "1",
      "text": [
        "y hoy guiar al que errante va;"
      ]
    },
    "3": {
      "verse": "1",
      "text": [
        "orar con noble pensamiento a Dios",
        "y un dulce sonreír,"
      ]
    },
    "4": {
      "verse": "1",
      "text": [
        "hasta el atardecer,",
        "es mi deber."
      ]
    },
    "5": {
      "verse": "2",
      "text": [
        "Buscar verdad cual ciego busca luz;"
      ]
    },
    "6": {
      "verse": "2",
      "text": [
        "hacer mejor desde el amanecer;",
        "cuidar mi corazón para Jesús;"
      ]
    },
    "7": {
      "verse": "2",
      "text": [
        "y a su divina voz,",
        "si llama, responder,",
        "es mi deber."
      ]
    },
    "8": {
      "verse": "3",
      "text": [
        "Luego, al comparecer ante él allí,"
      ]
    },
    "9": {
      "verse": "3",
      "text": [
        "cuando acabada aquí mi obra esté,"
      ]
    },
    "10": {
      "verse": "3",
      "text": [
        "le rendiré homenaje a sus pies,",
        "dentro de la ciudad,"
      ]
    },
    "11": {
      "verse": "3",
      "text": [
        "donde él coronará",
        "mi gran deber."
      ]
    }
  }
}